<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<table>
  <tr class="header">
    <td></td>
    <td>Pokemon</td>
    <td>Level</td>
    <td>Health</td>
  </tr>
  <% @pokemons.each do |pokemon| %>
  <tr>
    <td><%= button_to "Damage!", damage_path(id: pokemon), :class => "button medium", :method => :patch %></td>
    <td><%= "#{pokemon.name}" %></td>
    <td><%= "#{pokemon.level}" %></td>
    <td><%= "#{pokemon.health}" %></td>
  </tr>  
  <% end %>
</table>

<% if @trainer.id == current_trainer.id %>
  <p><%= link_to "Create a new Pokemon!", pokemons_new_path, :class => "button medium", :method => :get %></p>
<% end %>
